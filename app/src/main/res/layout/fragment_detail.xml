<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.eztrade.viewmodel.DetailViewModel" />
    </data>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Id"
                android:textSize="18dp" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="@{String.valueOf(viewModel.order.orderId)}"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Asset"
                android:textSize="18dp" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="@{viewModel.order.asset}"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Price"
                android:textSize="18dp" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="@{String.valueOf(viewModel.order.price)}"
                android:textSize="18dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Quantity"
                android:textSize="18dp" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="@{String.valueOf(viewModel.order.quantity)}"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Total"
                android:textSize="18dp" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="@{String.valueOf(viewModel.order.total)}"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Date"
                android:textSize="18dp" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="@{String.valueOf(viewModel.order.insertDate)}"
                android:textSize="18dp" />
        </TableRow>


    </TableLayout>


</layout>